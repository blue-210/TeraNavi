<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">

   <!-- ランディングページ -->
   <!-- <welcome-file-list>
     <welcome-file>/WEB-INF/jsp/index.jsp</welcome-file>
   </welcome-file-list> -->
   <!-- Servlet&JSP -->
   <servlet>
      <servlet-name>index</servlet-name>
      <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
      <servlet-name>index</servlet-name>
      <url-pattern>/index</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>FrontServlet</servlet-name>
      <servlet-class>ttc.FrontServlet</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>FrontServlet</servlet-name>
      <url-pattern>/front/*</url-pattern>
   </servlet-mapping>

   <servlet>
       <servlet-name>signup</servlet-name>
       <jsp-file>/WEB-INF/jsp/signup.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
       <servlet-name>signup</servlet-name>
       <url-pattern>/sign</url-pattern>
   </servlet-mapping>

   <servlet>
       <servlet-name>login</servlet-name>
       <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
       <servlet-name>login</servlet-name>
       <url-pattern>/login</url-pattern>
   </servlet-mapping>

   <servlet>
       <servlet-name>dmsend</servlet-name>
       <jsp-file>/WEB-INF/jsp/dmsend.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
       <servlet-name>dmsend</servlet-name>
       <url-pattern>/dmsend</url-pattern>
   </servlet-mapping>



   <!-- エラーページ -->
